{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "no-console": [
      false
    ],
    "prefer-for-of" : false, //後で消したい
    "forin": false, //後で消したい
    "no-misused-new": false, //後で消したい
    "no-namespace": false, //後で消したい
    "max-line-length" : false, //後で消したい
    "no-empty-interface": false,
    "indent": [true, "spaces", 2],
    "interface-name": [false],
    "no-bitwise": [false],
    "variable-name": false,
    "object-literal-sort-keys" : false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "src/webpack-replace/*.js"
    ]
  }
}